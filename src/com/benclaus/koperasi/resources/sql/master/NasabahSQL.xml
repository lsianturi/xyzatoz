			</isNotEmpty>
	</select>
	
	<insert id="insertNasabah" parameterClass="com.benclaus.koperasi.model.master.Nasabah" >
		INSERT INTO `ms_nasabah` (`nama`,  `jns_kelamin_id`,  `sts_sipil_id`,  `domisili`,  `alamat`,  `telepon`,  `agent_id`,  `perusahaan_id`,  `bank_id`,
  			`bagian`, `no_rek`,  `tgl_rek`,  `sts_krywn_id`,  `jns_anggota_id`,  `sts_anggota_id`,  `no_rek_ref`,  `nama_ref`,  `keterangan`,  `is_agent`)
		VALUES (#nama#, #jenisKelamin.id#, #statusSipil.id#, #domisili#, #alamat#, #telepon#, #agent.id#, #pt.id#, #bank.id#,
			#bagian#, #noRekening#, #tglRekening#, #statusKaryawan.id#, #jenisAnggota.id#, #statusAnggota.id#, #noRekeningRef#, #namaRef#, #keterangan#, #anAgent#)
	</insert>
	
	<update id="updateNasabah" parameterClass="com.benclaus.koperasi.model.master.Nasabah">
		UPDATE ms_nasabah SET  `nama`=#nama#,  `jns_kelamin_id`=#jenisKelamin.id#,  `sts_sipil_id`=#statusSipil.id#,  `domisili`=#domisili#,  `alamat`=#alamat#,  
			`telepon`=#telepon#,  `agent_id`=#agent.id#,  `perusahaan_id`=#pt.id#,  `bank_id`=#bank.id#,
  			`bagian`=#bagian#, `no_rek`=#noRekening#,  `tgl_rek`=#tglRekening#,  `sts_krywn_id`=#statusKaryawan.id#,  `jns_anggota_id`=#jenisAnggota.id#,
  			  `sts_anggota_id`=#statusAnggota.id#,  `no_rek_ref`=#noRekeningRef#,  `nama_ref`=#namaRef#,  `keterangan`=#keterangan#,  `is_agent`=#anAgent#
		WHERE `id`=#id#
	</update>
	
	<update id="deleteNasabah" parameterClass="java.lang.Integer">
		UPDATE ms_nasabah SET  `deleted` = 1
		WHERE `id`=#value#
	</update>
	
	<select id="getNasabah" resultMap="nasabahResult">
		SELECT `id`, `nama`,  `jns_kelamin_id`,  `sts_sipil_id`,  `domisili`,  `alamat`,  `telepon`,  `agent_id`,  `perusahaan_id`,  `bank_id`,
  			`bagian`, `no_rek`,  `tgl_rek`,  `sts_krywn_id`,  `jns_anggota_id`,  `sts_anggota_id`,  `no_rek_ref`,  `nama_ref`,  `keterangan`,  `is_agent`
			FROM ms_nasabah n
			WHERE n.deleted = 0
			AND n.id = #value#
	</select>
	
	
	
</sqlMap>

